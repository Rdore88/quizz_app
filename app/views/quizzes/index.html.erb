<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Published</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td>
          <% if quiz.published %>
            Published
          <% else %>
            Creating quiz
          <% end %>
        </td>
        <td><%= quiz.user.name %></td>
        <td><%= link_to 'Edit Questions/Answers', quiz %></td>
          <% if !quiz.published %>
            <td><%= link_to 'Publish', edit_quiz_path(quiz) %></td>
            <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
